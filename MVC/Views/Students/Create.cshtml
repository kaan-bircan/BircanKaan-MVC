@using Business.Models
@model StudentModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Surname" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Surname" class="form-control" />
					<span asp-validation-for="Surname" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="UniversityExamRank" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="UniversityExamRank" class="form-control" />
					<span asp-validation-for="UniversityExamRank" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="CumulativeGpa" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="CumulativeGpa" class="form-control" />
					<span asp-validation-for="CumulativeGpa" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="GradeId" class="col-2 col-form-label"> Grade</label>
				<select name="GradeId" class="form-select">
					<option value="">-- Select --</option>
					<option value="1">First Year</option>
					<option value="2">Second Year</option>
					<option value="3">Third Year</option>
					<option value="4">Fourth Year</option>
				</select>
            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




